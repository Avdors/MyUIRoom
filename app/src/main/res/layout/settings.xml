<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tabs.move.Settings">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_lable_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/settings"
        android:textAlignment="center"
        android:layout_marginTop="10dp"

        android:textStyle="bold"
        android:textColor="@color/green_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_time_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/notification_output_time"
        android:textColor="@color/green_medium"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/time_notification"
        app:layout_constraintTop_toTopOf="@+id/time_notification"
        app:layout_constraintBottom_toBottomOf="@+id/time_notification" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/green_medium"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_time_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_lable_settings"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>